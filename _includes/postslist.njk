<section reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <div class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <h3><a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h3>
    <p class="text-secondary" datetime="{{ post.date | htmlDateString }}">
    <small>post by {{ metadata.author.name }} on {{ post.date | readableDate }}</small>
    </p>
    <p>{{ post.data.description }} <br/>More info â†’ <a href="{{ post.url | url }}">{{ post.data.title }}</a></p>
    <p>Tag : 
    {% for tag in post.data.tags | filterTagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
     <small><a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a></small>
    {% endfor %}
    </p>
    <hr/>
  </div>
{% endfor %}
  </section>

